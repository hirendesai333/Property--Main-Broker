<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:fontFamily="@font/nunito_sans_bold"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Your Selected Location"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:text="Latitude : 22.6693918937282895"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:padding="@dimen/_4sdp"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:text="Longitude : 22.6693918937282895"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:padding="@dimen/_4sdp"
        android:layout_height="wrap_content"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:hint="Enter Radius (In Miles)"
        app:boxBackgroundColor="@color/white"
        app:hintTextColor="@color/green_700">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="@dimen/_12ssp"
            app:fontFamily="@font/nunito_sans" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:text="save"
        app:backgroundTint="@color/green_700"
        app:fontFamily="@font/nunito_sans_bold" />


</LinearLayout>