<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/imageCard"
    android:layout_alignBottom="@+id/imageCard"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jobNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:text="job No: 20210426/4"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Shivalik Shilp"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_14ssp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/markCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bid_dialog_border"
                android:fontFamily="@font/nunito_sans"
                android:padding="@dimen/_4sdp"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Mark As: Completed"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/jobStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bid_dialog_border"
            android:fontFamily="@font/nunito_sans"
            android:padding="@dimen/_4sdp"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_7sdp"
            android:visibility="gone"
            android:paddingEnd="@dimen/_7sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="Job status: Completed"
            android:textColor="@color/green_700"
            android:textSize="@dimen/_10ssp" />

