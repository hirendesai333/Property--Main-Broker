    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jobNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="job No: 20210426/4"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Shivalik Shilp"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/name"
                android:backgroundTint="@color/purple_700"
                android:src="@drawable/ic_call" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/assignTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/nunito_sans_bold"
                android:maxLines="1"
                android:text="Assign To: Mohit Shah"
                android:textSize="@dimen/_11sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/jobStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bid_dialog_border"
                android:fontFamily="@font/nunito_sans"
                android:paddingStart="@dimen/_7sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Job status: Started"
                android:textColor="@color/green_700"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/bidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Bid Amount: $1999"/>

            <TextView
                android:id="@+id/assignPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/nunito_sans_bold"
                android:maxLines="1"
                android:text="+91 987654321"
                android:textSize="@dimen/_11sdp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/right_grey_background"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_3sdp"
                    android:fontFamily="@font/nunito_sans"
                    android:text="Date"
                    android:textSize="@dimen/_10ssp"
                    app:drawableStartCompat="@drawable/ic_date"
                    app:drawableTint="@color/green_700" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_sans"
                    android:text="20/12/2020"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:fontFamily="@font/nunito_sans_semibold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/right_grey_background"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_3sdp"
                    android:fontFamily="@font/nunito_sans"
                    android:text="Time"
                    android:textSize="@dimen/_10ssp"
                    app:drawableStartCompat="@drawable/ic_time"
                    app:drawableTint="@color/green_700" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_sans"
                    android:text="12:30PM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:fontFamily="@font/nunito_sans_semibold" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/totalProperty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/postDate"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center_vertical"
                android:text="Total property: 1"
                android:textSize="@dimen/_10ssp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/postDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/nunito_sans"
                android:gravity="end"
                android:text="Posted on: 18th dec 2020"
                android:textSize="@dimen/_8ssp" />

        </RelativeLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>