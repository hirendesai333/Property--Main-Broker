<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Shivalik Shilp"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/_14ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/postedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_3sdp"
            android:fontFamily="@font/nunito_sans"
            android:text="Posted by: Rudra Pvt Ltd."
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:id="@+id/bidsOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/nunito_sans"
                android:text="Bids Overview: "
                android:textSize="@dimen/_10ssp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:text="Lowest $5"
                android:textSize="@dimen/_10ssp"
                app:drawableStartCompat="@drawable/ic_down_arrow"
                app:drawableTint="@android:color/holo_red_dark" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/nunito_sans"
                android:text="Highest $100"
                android:textSize="@dimen/_10ssp"
                app:drawableStartCompat="@drawable/ic_up_arrow"
                app:drawableTint="@android:color/holo_green_dark" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_3sdp"
            android:fontFamily="@font/nunito_sans"
            android:text="USA"
            android:textSize="@dimen/_10ssp"
            app:drawableStartCompat="@drawable/ic_location"
            app:drawableTint="@color/green_700" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/right_grey_background"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_3sdp"
                    android:fontFamily="@font/nunito_sans"
                    android:text="Date"
                    android:textSize="@dimen/_10ssp"
                    app:drawableStartCompat="@drawable/ic_date"
                    app:drawableTint="@color/green_700" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_sans"
                    android:text="20/12/2020"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:fontFamily="@font/nunito_sans_semibold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/right_grey_background"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_3sdp"
                    android:fontFamily="@font/nunito_sans"
                    android:text="Time"
                    android:textSize="@dimen/_10ssp"
                    app:drawableStartCompat="@drawable/ic_time"
                    app:drawableTint="@color/green_700" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_sans"
                    android:text="12:30PM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:fontFamily="@font/nunito_sans_semibold" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_3sdp"
            android:fontFamily="@font/nunito_sans"
            android:gravity="end"
            android:text="Posted on: 18th dec 2020"
            android:textSize="@dimen/_8ssp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>