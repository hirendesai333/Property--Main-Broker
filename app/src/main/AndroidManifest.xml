<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soboft.propertybroker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".utils.AgentApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PropertyMainBroker">
        <activity
            android:name=".ui.activities.NewJob"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.PropertyMoreDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.AddProperty"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.MyProperties"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.MyCustomers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.Documents"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.Notification"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.AgentListCompletedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.BidsList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.PropertyDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.AddNewJob"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">

            <!--
             <intent-filter>
                 <action android:name="android.intent.action.MAIN" />

                 <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
            -->
        </activity>
    </application>

</manifest>